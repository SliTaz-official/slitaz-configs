<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<!-- Favorite applications -->
<menu id="favorites-menu" label="Favorite Applications">
  <item label="File Manager">
    <action name="Execute"><command>file-manager</command></action>
  </item>
  <item label="Terminal">
    <action name="Execute"><command>terminal</command></action>
  </item>
  <item label="Web Browser">
    <action name="Execute"><command>browser</command></action>
  </item>
  <item label="Text Editor">
    <action name="Execute"><command>editor</command></action>
  </item>
  <separator />
  <!-- TODO: Write a Yad frontend to applications.conf -->
  <!-- <item label="Configure favorites">
    <action name="Execute"><command>desktopbox tazapps</command></action>
  </item> -->
</menu>

<!-- Desktop effects -->
<menu id="desktop-effects" label="Desktop Effects">
  <item label="Activate composite">
    <action name="Execute"><command>xcompmgr</command></action>
  </item>
  <item label="Activate shadows">
    <action name="Execute"><command>xcompmgr -c -r 10</command></action>
  </item>
  <item label="Activate shadows/fade">
    <action name="Execute"><command>xcompmgr -c -f -r 10</command></action>
  </item>
  <separator />
  <item label="Set opacity (actual)">
    <action name="Execute">
      <command>transset-df --actual --max 60</command>
    </action>
  </item>
  <item label="Set opacity (click)">
    <action name="Execute">
      <command>transset-df --click --max 60</command>
    </action>
  </item>
  <separator />
  <item label="Stop effects">
    <action name="Execute"><command>killall xcompmgr</command></action>
  </item>
</menu>

<!-- SliTaz Live (Tazlito and Tazusb) -->
<menu id="slitaz-live-menu" label="SliTaz Live">
  <item label="Tazlito LiveCD Tool">
    <action name="Execute"><command>subox tazlito-wiz</command></action>
  </item>
  <item label="TazUSB LiveUSB Tool">
    <action name="Execute"><command>subox tazusb-box</command></action>
  </item>
  <separator />
  <item label="TazUSB Writefs (gzip)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs gzip"</command>
    </action>
  </item>
  <item label="TazUSB Writefs (lzma)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs lzma"</command>
    </action>
  </item>
  <item label="TazUSB Writefs (none)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs none"</command>
    </action>
  </item>
</menu>

<!-- Openbox configuration -->
<menu id="openbox-menu" label="Openbox">
  <item label="ObConf">
    <action name="Execute"><command>obconf</command></action>
  </item>
  <item label="Autostart Script">
    <action name="Execute">
      <command>desktopbox autostart</command>
    </action>
  </item>
  <item label="Openbox Menu">
    <action name="Execute">
      <command>editor ~/.config/openbox/menu.xml</command>
    </action>
  </item>
  <separator />
  <item label="Reconfigure">
    <action name="Reconfigure" />
  </item>
  <item label="Restart">
    <action name="Restart" />
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <!-- <separator label="SliTaz Openbox" /> -->
  <item label="Create a new file or folder" icon="/usr/share/icons/SliTaz/mimetypes/32/empty.png">
    <action name="Execute"><command>tazbox new-file</command></action>
  </item>
  <item label="Run application" icon="/usr/share/icons/SliTaz/mimetypes/32/exec.png">
    <action name="Execute"><command>lxpanelctl run</command></action>
  </item>
  <separator />
  <menu id="favorites-menu" icon="/usr/share/icons/SliTaz/places/32/user-bookmarks.png" />
  <!-- Pipe menu to open folder using GTK bookmarks -->
  <menu id="open-folder-menu" label="Open Folder" icon="/usr/share/icons/SliTaz/places/32/folder-open.png"
        execute="/usr/lib/openbox/open-folder-menu.sh" />
  <menu id="desktop-effects" icon="/usr/share/icons/SliTaz/apps/22/desktop-effects.png" />
  <menu id="slitaz-live-menu" icon="/usr/share/pixmaps/slitaz-icon.png" />
  <menu id="openbox-menu" icon="/usr/share/pixmaps/openbox.png" />
  <menu id="client-list-menu" icon="/usr/share/icons/SliTaz/places/32/desktop.png" />
  <separator />
  <item label="Logout" icon="/usr/share/pixmaps/slitaz-logout.png">
    <action name="Execute"><command>tazbox logout</command></action>
  </item>
</menu>

</openbox_menu>
