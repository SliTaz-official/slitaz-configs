<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/3.4/menu">

<!-- Favorites applications -->
<menu id="favorites-menu" label="Applications favorites">
  <item label="Gestionnaire de fichiers">
    <action name="Execute"><command>file-manager</command></action>
  </item>
  <item label="Emulateur de Terminal">
    <action name="Execute"><command>terminal</command></action>
  </item>
  <item label="Navigateur Web">
    <action name="Execute"><command>browser</command></action>
  </item>
  <item label="Editeur de texte">
    <action name="Execute"><command>editor</command></action>
  </item>
  <separator />
  <item label="Configuration des favoris">
    <action name="Execute"><command>desktopbox tazapps</command></action>
  </item>
</menu>

<!-- Desktop effects -->
<menu id="desktop-effects" label="Effets visuels">
  <item label="Activer le composite">
    <action name="Execute"><command>xcompmgr</command></action>
  </item>
  <item label="Active les ombres">
    <action name="Execute"><command>xcompmgr -c -r 10</command></action>
  </item>
  <item label="Activer les ombres fade">
    <action name="Execute"><command>xcompmgr -c -f -r 10</command></action>
  </item>
  <separator />
  <item label="Régler l'opacité (actuel)">
    <action name="Execute">
      <command>transset-df --actual --max 60</command>
    </action>
  </item>
  <item label="Régler l'opacité (clicque)">
    <action name="Execute">
      <command>transset-df --click --max 60</command>
    </action>
  </item>
  <separator />
  <item label="Stoper les effets">
    <action name="Execute"><command>killall xcompmgr</command></action>
  </item>
</menu>

<!-- SliTaz Live (Tazlito and Tazusb) -->
<menu id="slitaz-live-menu" label="SliTaz Live CD/USB">
  <item label="Tazlito LiveCD Tool">
    <action name="Execute"><command>subox tazlitobox</command></action>
  </item>
  <item label="TazUSB LiveUSB Tool">
    <action name="Execute"><command>subox tazusbbox</command></action>
  </item>
  <separator />
  <item label="TazUSB Writefs (gzip)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs gzip"</command>
    </action>
  </item>
  <item label="TazUSB Writefs (lzma)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs lzma"</command>
    </action>
  </item>
  <item label="TazUSB Writefs (none)">
    <action name="Execute">
      <command>subox "xterm -e tazusb writefs none"</command>
    </action>
  </item>
</menu>

<!-- Openbox configuration -->
<menu id="openbox-menu" label="Openbox">
  <item label="Configuration via OBconf">
    <action name="Execute"><command>obconf</command></action>
  </item>
  <item label="Script de démarrage">
    <action name="Execute">
      <command>desktopbox autostart</command>
    </action>
  </item>
  <item label="Menu d'Openbox">
    <action name="Execute">
      <command>editor ~/.config/openbox/menu.xml</command>
    </action>
  </item>
  <separator />
  <item label="Reconfigurer">
    <action name="Reconfigure" />
  </item>
  <item label="Redémarrer">
    <action name="Restart" />
  </item>
</menu>

<menu id="root-menu" label="Openbox 3">
  <!-- <separator label="SliTaz Openbox" /> -->
  <item label="Créer un nouveau fichier">
    <action name="Execute"><command>tazbox new-file</command></action>
  </item>
  <item label="Exécuter une application">
    <action name="Execute"><command>lxpanelctl run</command></action>
  </item>
  <separator />
  <menu id="favorites-menu" />
  <!-- Pipe menu to open folder using GTK bookmarks -->
  <menu id="open-folder-menu" label="Dossiers favoris"
        execute="/usr/lib/openbox/open-folder-menu.sh" />
  <menu id="desktop-effects" />
  <menu id="slitaz-live-menu" />
  <menu id="openbox-menu" />
  <menu id="client-list-menu" />
  <separator />
  <item label="Déconnexion">
    <action name="Execute"><command>tazbox logout</command></action>
  </item>
</menu>

</openbox_menu>
